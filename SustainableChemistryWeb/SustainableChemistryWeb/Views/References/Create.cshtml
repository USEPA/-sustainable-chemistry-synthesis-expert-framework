@model SustainableChemistryWeb.Models.Reference

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>AppReference</h4>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FunctionalGroupId" class="control-label"></label>
                    <select asp-for="FunctionalGroupId" class="form-control chosen-select" asp-items="ViewBag.FunctionalGroupId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ReactionId" class="control-label"></label>
                    <select asp-for="ReactionId" class="form-control chosen-select" asp-items="ViewBag.ReactionId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Risdata" class="control-label">RIS Date File</label>
                    <input asp-for="Risdata" class="form-control" type="file" />
                    <span asp-validation-for="Risdata" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
