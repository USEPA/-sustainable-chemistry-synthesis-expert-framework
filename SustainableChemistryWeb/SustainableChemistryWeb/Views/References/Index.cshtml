@model IEnumerable<SustainableChemistryWeb.ViewModels.ReferenceViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Find by Functional Group: <input type="text" name="FunctionalGroupSearchString" value="@ViewData[" currentFilter"]" />
                <input type="submit" value="Search" class="btn btn-default" /> |
                <a asp-action="Index">Back to Full List</a>
            </p>
        </div>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FunctionalGroup)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Reaction)
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FunctionalGroup.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reaction.Name)
                    </td>
                    <td>
                        <a href="@item.URL" target="_newtab">@Html.DisplayFor(modelItem => item.Text)</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}