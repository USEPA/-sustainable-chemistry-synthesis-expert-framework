@page
@model SustainableChemistryWeb.Views.Catalysts.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Catalyst</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Catalyst.Id" />
            <div class="form-group">
                <label asp-for="Catalyst.Description" class="control-label"></label>
                <input asp-for="Catalyst.Description" class="form-control" />
                <span asp-validation-for="Catalyst.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Catalyst.Name" class="control-label"></label>
                <input asp-for="Catalyst.Name" class="form-control" />
                <span asp-validation-for="Catalyst.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Catalyst.OwnerID" class="control-label"></label>
                <input asp-for="Catalyst.OwnerID" class="form-control" />
                <span asp-validation-for="Catalyst.OwnerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Catalyst.Status" class="control-label"></label>
                <select asp-for="Catalyst.Status" class="form-control"></select>
                <span asp-validation-for="Catalyst.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
